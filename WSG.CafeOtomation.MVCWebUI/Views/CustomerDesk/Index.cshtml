@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Menü Başlığı</title>
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>

    <script src="https://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/notify/0.4.2/notify.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style type="text/css">
        .main {
            position: relative;
        }

        img {
            position: relative;
            object-fit: cover;
            width: 100%;
            height: 200px;
            z-index: -1;
        }

        p {
            color: #fff;
            position: absolute;
            width: 100%;
            height: 100%;
            vertical-align: central;
            text-align: center;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            font-weight: bold;
            font-size: 3rem;
        }

        .gredientColor {
            display: block;
            background: linear-gradient(rgba(92, 10, 10, 0.53),rgba(92, 10, 10, 0.53));
        }
    </style>
</head>
<body>
    <div class="main">
        <a href="MenuCategoryIndex?deskUniqueID=@ViewBag.DeskUniqueID">
            <p>Menüler</p>
            <div class="gredientColor">
                <img style="z-index:-1" src="https://www.publicdomainpictures.net/pictures/210000/velka/brown-fabric-textured-background.jpg" alt="brown.img" />
            </div>
        </a>
    </div>
    <div class="main">
        <a href="OrderStatusIndex?deskUniqueID=@ViewBag.DeskUniqueID">
            <p>Siparişleriniz</p>
            <div class="gredientColor">
                <img style="z-index:-2" src="https://imgmedia.lbb.in/media/2019/12/5df3d7278b5cec09bebc757f_1576261415871.jpeg" alt="brown.img" />
            </div>
        </a>
    </div>
    <div class="main">
        <a href="OrderStatusIndex?deskUniqueID=@ViewBag.DeskUniqueID">
            <p>Garson Çağır</p>
            <div class="gredientColor">
                <img style="z-index:-2" src="https://i2.wp.com/www.eatthis.com/wp-content/uploads/2019/08/Waiter-acting-friendly-to-customers.jpg?fit=1200%2C879&ssl=1" alt="brown.img" />
            </div>
        </a>
    </div>
    <script type="text/javascript">
        $("img").animate({ "opacity": "1", "margin-top": "-100" }, 0);
        $("img").animate({ "opacity": "1", "margin-top": "0" }, 1500);
    </script>
</body>
</html>
