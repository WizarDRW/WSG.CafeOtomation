@model WSG.CafeOtomation.Entities.Concrete.Desk

@{
    ViewData["Title"] = "Sil";
}

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Masa Numarası
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeskNo)
        </dd>
        <dt class = "col-sm-2">
            Durum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> &nbsp;
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
